rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own reference images
    match /users/{userId}/reference-images/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null && 
                         request.auth.uid == userId &&
                         resource.size < 10 * 1024 * 1024 && // 10MB limit
                         resource.contentType.matches('image/.*');
    }
    
    // Users can access generated images
    match /generated-images/{userId}/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; // Allow public read access for sharing
    }
    
    // Users can access generated videos
    match /generated-videos/{userId}/{videoId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; // Allow public read access for sharing
    }
  }
}